@using DanceCompetitionHelper.Database.Tables;
@using DanceCompetitionHelper.Web.Controllers;

@model ParticipantOverviewViewModel

@{
    var compInfo = Model.Competition;

    var compInfoStr = string.Format(
        "{0} ({1})",
        compInfo?.CompetitionName ?? "??",
        compInfo?.OrgCompetitionId ?? "??");

    ViewData["Title"] = string.Format(
        "Participants of {0}",
        compInfoStr);
}

<div class="text-center">
    <h1 class="display-6">Participants of @compInfoStr</h1>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Start Number
                </th>
                <th>
                    Name(s)
                </th>
                <th>
                    Club
                </th>
                <th>
                    Possible Promotion
                </th>
                <th>
                    Multiple Starts
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Participtans ?? Enumerable.Empty<Participant>())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NamePartA)
                        @Html.DisplayFor(modelItem => item.NamePartB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubName)
                    </td>
                    <td>
                        @(item.DisplayInfo?.PossiblePromotion ?? false)
                    </td>
                    <td>
                        @(item.DisplayInfo?.MultipleStarts?.Any() ?? false)
                    </td>
                    
                    <td>
                        <a asp-controller="@ParticipantController.RefName"
                           asp-action="@nameof(ParticipantController.Index)"
                           asp-route-id="@item.CompetitionClassId">Edit</a> |
                        <a asp-controller="@ParticipantController.RefName"
                           asp-action="@nameof(ParticipantController.Index)"
                           asp-route-id="@item.CompetitionClassId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <div class="row d-flex justify-content-center py-1">
        <div class="col">
            <a asp-controller="@ParticipantController.RefName"
               asp-action="@nameof(ParticipantController.Index)"
               asp-route-id="@Model.Competition?.CompetitionId"
               class="btn btn-primary">
               Create new
            </a>
            &nbsp;
            <a asp-controller="@CompetitionController.RefName"
               asp-action="@nameof(CompetitionController.Index)"
               class="btn btn-secondary px-lg-4">
                Back
            </a>
        </div>
    </div>
</div>

