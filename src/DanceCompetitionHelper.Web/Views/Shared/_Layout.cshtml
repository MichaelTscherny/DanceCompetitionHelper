@using DanceCompetitionHelper.Web.Controllers;

@{
    var backToCompClass = ViewData["BackTo" + CompetitionClassController.RefName] as Guid?;
    var showParticipants = ViewData["Show" + ParticipantController.RefName] as Guid?;
    var showMultipleStarters = ViewData[nameof(CompetitionClassController.ShowMultipleStarters)] as Guid?;
    var showPossiblePromotions = ViewData[nameof(CompetitionClassController.ShowPossiblePromotions)] as Guid?;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DanceCompetitionHelper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DanceCompetitionHelper.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Competition" asp-action="Index">DanceCompetitionHelper</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (backToCompClass !=  null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""
                                   asp-controller="@CompetitionClassController.RefName"
                                   asp-action="@nameof(CompetitionClassController.Index)"
                                   asp-route-id="@backToCompClass">Competition Classes</a>
                            </li>
                        }

                        @if (showParticipants != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""
                                   asp-controller="@ParticipantController.RefName"
                                   asp-action="@nameof(ParticipantController.Index)"
                                   asp-route-id="@showParticipants">Participants</a>
                            </li>
                        }

                        @if (showMultipleStarters != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""
                                   asp-controller="@CompetitionClassController.RefName"
                                   asp-action="@nameof(CompetitionClassController.ShowMultipleStarters)"
                                   asp-route-id="@showMultipleStarters">Multiple Starters</a>
                            </li>
                        }

                        @if (showPossiblePromotions != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area=""
                                   asp-controller="@CompetitionClassController.RefName"
                                   asp-action="@nameof(CompetitionClassController.ShowPossiblePromotions)"
                                   asp-route-id="@showPossiblePromotions">Promotions</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022-@DateTime.Now.ToString("yyyy") - DanceCompetitionHelper - <a asp-area="" asp-controller="Competition" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        /* I like ToolTips ;) */
        $(document).ready(function () {
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
</body>
</html>
